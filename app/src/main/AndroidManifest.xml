<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.infostages.infonut">

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Home"
            android:label="Infosession">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Infosessions" />
        <activity
            android:name=".LoginActivity"
            android:label="Log in" />
        <activity
            android:name=".BarcodeReader"
            android:label="Results"
            android:parentActivityName=".Home" />
        <activity
            android:name=".BarcodeCaptureActivity"
            android:label="Scan an item" />
        <activity
            android:name=".RegisterActivity"
            android:label="Sign Up" />
        <activity
            android:name=".NewUserActivity"
            android:label="Welcome"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".StatisticsActivity"
            android:label="Details" />
        <activity
            android:name=".MakePlanActivity"
            android:label="@string/make_plan_activity"
            android:parentActivityName=".Home" />
        <activity android:name=".NewUser2Activity" />
    </application>

</manifest>